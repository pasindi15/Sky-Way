<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="120dp">

            <!-- Profile section with circular profile picture and greeting -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Circular profile picture -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/profile_pic"
                    android:background="@drawable/circle_profile_background"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:contentDescription="@string/profile_picture"
                    android:id="@+id/homeProfileThumb"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Greeting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hi_catherine"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Adventure card with background image -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_rectangle_background">

                <!-- Background image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_image"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_image_background"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:contentDescription="@string/adventure_background" />

                <!-- Overlay text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="90dp"
                    android:fontFamily="@font/poppins_semi_bold_italic"
                    android:gravity="center"
                    android:text="@string/let_s_discover_a_new_nadventure"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Four circular icons in a row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="30dp">

                <!-- Flight icon -->
                <LinearLayout
                    android:id="@+id/flightIconLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_icon_background"
                        android:src="@drawable/ic_flight"
                        android:padding="16dp"
                        app:tint="@color/dark_blue"
                        android:contentDescription="Flight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flight"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Hotel icon -->
                <LinearLayout
                    android:id="@+id/hotelIconLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_icon_background"
                        android:src="@drawable/ic_booking"
                        android:padding="16dp"
                        app:tint="@color/dark_blue"
                        android:contentDescription="Hotel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Countries icon -->
                <LinearLayout
                    android:id="@+id/countriesIconLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_icon_background"
                        android:src="@drawable/ic_country"
                        android:padding="16dp"
