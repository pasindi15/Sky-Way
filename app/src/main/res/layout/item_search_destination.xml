<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/rounded_background"
    android:padding="10dp">

        <ImageView
            android:id="@+id/destImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background"
            android:clipToOutline="true"
            android:contentDescription="Destination image" />

        <ImageView
            android:id="@+id/destFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/destImage"
            android:layout_alignEnd="@id/destImage"
            android:layout_margin="8dp"
            android:src="@drawable/ic_favorite"
            android:contentDescription="Favorite"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:id="@+id/infoRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/destImage"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="4dp"
                android:tint="@android:color/black"
                android:contentDescription="Location" />

            <TextView
                android:id="@+id/destCountry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Country"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:layout_marginEnd="4dp"
                android:tint="@android:color/black"
                android:contentDescription="Rating" />

            <TextView
                android:id="@+id/destRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/destCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoRow"
            android:layout_marginTop="4dp"
            android:text="City"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

    
</RelativeLayout>
