<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle_icon_background"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/backBtn"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="120dp">

            <!-- Ticket Card -->
            <RelativeLayout
                android:id="@+id/ticketCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/modern_input_background"
                android:padding="24dp">

                <!-- Airline Logo (left) and Static Booked Date (right) -->
                <LinearLayout
                    android:id="@+id/airlineRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/airlineLogo"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:contentDescription="Airline"
                        android:scaleType="fitCenter"
                        android:src="@drawable/air_canada" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/flightDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/december_12_2025"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Times Row -->
                <LinearLayout
                    android:id="@+id/timesRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/airlineRow"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Departure Details (Left) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <!-- Could be dynamic; keeping literal time -->
                        <TextView
                            android:id="@+id/detailDepTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:05 AM"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                        <!-- Airport code dynamic placeholder -->
                        <TextView
                            android:id="@+id/detailDepCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YUL"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <!-- Divider Line -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="48dp"
                        android:background="#D0D0D0"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />

                    <!-- Arrival Details (Right) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">
                        <!-- Arrival time literal for now -->
                        <TextView
                            android:id="@+id/detailArrTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:05 AM"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                        <!-- Arrival code placeholder -->
                        <TextView
                            android:id="@+id/detailArrCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YUL"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Meta Row -->
                <LinearLayout
                    android:id="@+id/metaRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timesRow"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/economy"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/class_label"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gate"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/terminal"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AB07"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flight"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Passenger Row -->
                <LinearLayout
                    android:id="@+id/passengerRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/metaRow"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/profilePic"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@drawable/profile_pic"
                        android:background="@drawable/circle_profile_background"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:contentDescription="Profile" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/passengerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/catherine_dias"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/passengerMeta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/age_gender_sample"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>

                <!-- QR Code -->
                <ImageView
                    android:id="@+id/qrCode"
                    android:layout_width="260dp"
                    android:layout_height="260dp"
                    android:layout_below="@id/passengerRow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/qr"
                    android:contentDescription="QR" />

            </RelativeLayout>

            <TextView
                android:id="@+id/printButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="28dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/print_button_background"
                android:gravity="center_vertical"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawableStart="@drawable/ic_print"
                android:drawablePadding="10dp"
                android:text="@string/print"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
