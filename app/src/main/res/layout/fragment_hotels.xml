<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:id="@+id/hotelsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/hotelsBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_icon_background"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hotels_around_the_world"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/hotelsProfileThumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_pic"
                android:background="@drawable/circle_profile_background"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:contentDescription="Profile" />
        </LinearLayout>

        <EditText
            android:id="@+id/hotelsSearchEditText"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="16dp"
            android:hint="@string/search_hotels_hint"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/dark_blue"
            android:textColorHint="@color/dark_blue"
            android:drawableTint="@color/dark_blue" />

    </LinearLayout>
    <ImageView
        android:id="@+id/hotelsTopBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/hotelsHeader"
        android:layout_margin="20dp"
        android:src="@drawable/top_hotel"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image_background"
        android:clipToOutline="true"
        android:contentDescription="Top hotel banner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hotelsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hotelsTopBanner"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />

</RelativeLayout>
