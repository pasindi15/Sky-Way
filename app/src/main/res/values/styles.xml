<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom TextInputLayout Style - using proper Material parent -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox</item>
        <item name="hintTextColor">@color/dark_blue</item>
        <item name="boxStrokeColor">@color/dark_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>
    
    <style name="CustomTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Floating hint label style -->
    <style name="FloatingHintStyle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
